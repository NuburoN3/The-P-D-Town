{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["**/*.js", "**/*.mjs"],
  "exclude": ["node_modules", "assets", "backups"]
}
